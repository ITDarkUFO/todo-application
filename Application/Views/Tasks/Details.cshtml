@model Application.Models.ToDoItem

@{
    ViewData["Title"] = "Детали задачи";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Задачи ToDo</a></li>
        <li class="breadcrumb-item active" aria-current="page">Детали задачи</li>
    </ol>
</nav>

<h1>Детали задачи</h1>
<p class="text-muted">Посмотрите информацию о задаче ToDo</p>

<div class="row mb-2 gy-2">
    <div class="col-12 col-xl-6">
        <div class="row mb-2 gy-2">
            <div class="col">
                <div class="form-floating">
                    <input asp-for="Title" class="form-control" placeholder="Название задачи" disabled readonly />
                    <label asp-for="Title">Название задачи</label>
                </div>
            </div>
        </div>
        <div class="row mb-2 gy-2">
            <div class="col">
                <div class="form-floating">
                    <input asp-for="DueDate" type="date" class="form-control" placeholder="Срок выполнения" disabled readonly />
                    <label asp-for="DueDate">Срок выполнения</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating">
                    <input name="DueTime" type="time" class="form-control" placeholder="Срок выполнения (время)" value="@ViewData["DueTime"]" disabled readonly />
                    <label name="DueTime">Срок выполнения (время)</label>
                </div>
            </div>
        </div>
        <div class="row mb-2 gy-2">
            <div class="col">
                <div class="form-floating">
                    <select asp-for="Priority" asp-items="ViewBag.Priorities" class="form-select" disabled readonly></select>
                    <label asp-for="Priority">Приоритет задачи</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-6">
        <div class="form-floating">
            <textarea asp-for="Description" class="form-control" style="height: calc((3.5rem + .5rem) * 3); min-height: calc((3.5rem + .5rem) * 3);" placeholder="Описание задачи" disabled readonly></textarea>
            <label asp-for="Description">Описание задачи</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-xl-6">
        <div class="form-switch">
            <input class="form-check-input" asp-for="IsCompleted" disabled readonly />
            <label asp-for="IsCompleted">Отметить как выполненое</label>
            <span asp-validation-for="IsCompleted" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 col-xl-6">
        <div class="float-end">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Назад</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-5">Редактировать</a>
        </div>
    </div>
</div>