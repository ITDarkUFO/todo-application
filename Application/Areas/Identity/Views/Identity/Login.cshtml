@model Application.Dtos.UserLoginDto

@{
    ViewData["Title"] = "Вход в систему";
}

<div class="d-flex justify-content-center mt-5 mb-5">
    <h1 class="d-inline-block">Войти в систему</h1>
</div>

<form asp-action="Login" method="post">
    <div class="row mb-2">
        <div class="col-12 col-xl-6 m-auto">
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" placeholder="Имя пользователя" aria-required="true" />
                <label asp-for="UserName">Имя пользователя <span class="text-danger">*</span></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-12 col-xl-6 m-auto">
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" aria-required="true" />
                <label asp-for="Password">Пароль <span class="text-danger">*</span></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-12 col-xl-6 m-auto">
            <div class="form-check form-switch">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" placeholder="Запомнить меня" />
                <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-12 col-xl-6 m-auto">
            <div class="float-end">
                <input type="submit" value="Войти" class="btn btn-primary px-5" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-xl-6 m-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
