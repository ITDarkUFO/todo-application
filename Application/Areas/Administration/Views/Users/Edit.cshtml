@model Application.Dtos.AdminUserEditDto

@{
    ViewData["Title"] = "Редактирование пользователя";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">Админ-панель</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Пользователи</a></li>
        <li class="breadcrumb-item active" aria-current="page">Редактирование пользователя</li>
    </ol>
</nav>

<h1>Редактирование пользователя</h1>
<p class="text-muted">Измените данные пользователя</p>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row mb-2">
        <div class="col-12 col-xl-6">
            <div class="form-floating mb-2">
                <input asp-for="UserName" class="form-control" placeholder="Имя пользователя" />
                <label asp-for="UserName">Имя пользователя</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" placeholder="Почта" />
                <label asp-for="Email">Почта</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row mb-2">
                <div class="col-6">
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" autocomplete="off" />
                        <label asp-for="Password">Пароль <span class="text-muted">(Необязательно)</span></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Подтверждение пароля" autocomplete="off" />
                        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-switch d-inline-block col-6">
                    <input asp-for="IsSuperUser" class="form-check-input" placeholder="Добавить как администратора" />
                    <label asp-for="IsSuperUser">Назначить администратором</label>
                    <span asp-validation-for="IsSuperUser" class="text-danger"></span>
                </div>
                <div class="d-inline-block text-end col-auto">
                    @if (ViewData["PreviousPage"] as string != null)
                    {
                        <a href="@ViewData["PreviousPage"]" class="btn btn-outline-secondary px-4">Назад</a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Назад</a>
                    }
                    <input type="submit" value="Редактировать" class="btn btn-primary px-5" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
